                            layout="@layout/layout_add_button"/>

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!--RAM1 Layout-->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="12dp"
                    android:elevation="8dp"
